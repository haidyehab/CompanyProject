@model IEnumerable<RoleViewModel>
    @{
    ViewData["Title"] = "Index";
    }


<a class="btn btn-primary" asp-action="Create">Create New Role</a>
<br />

    <div class="row mt-5 justify-content-center align-items-center">
        <form class="col-8 row" asp-action="Index">
            <div class="col-8">
            <input type="text" class="form-control" name="Name" placeholder="Search By RoleName" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </form>
    </div>


    @if (Model.Count() > 0)
{
    <table class="table table-striped mt-3 table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
              
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
            <tr>
                <td>@role.Id</td>
                <td>@role.RoleName</td>

                    <partial name="_ButtonsPrtialView" model="@role.Id" />
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>thre is no Roles</h3>
    </div>
}

