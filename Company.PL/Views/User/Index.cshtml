@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}



<h1>All Users</h1>
<br />
<br />
<div class="row mt-5 justify-content-center align-items-center">
    <form class="col-8 row" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchValue" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
               
                <td>@Html.DisplayNameFor(U => U.Fname)</td>
                <td>@Html.DisplayNameFor(U => U.Lname)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    
                    <td>@user.Fname</td>
                    <td>@user.Lname</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(" , ",user.Roles)</td>
                    <partial name="_ButtonsPrtialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>
            There is no Employees
        </h3>
    </div>
}


